<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tibbo"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
       android:targetSdkVersion="8" />
	<uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name">
        <activity
            android:name=".Tibbo"
            android:label="@string/title_activity_tibbo" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".DeviceListActivity"
                  android:label="@string/select_device"
                  android:theme="@android:style/Theme.Dialog"
                  android:configChanges="orientation|keyboardHidden" />
        <activity android:name="Message"></activity>
        <activity android:name="Post"></activity>
        <activity android:name="Control"></activity>
        <activity android:name="BluetoothChat"></activity>
    </application>

</manifest>